@{
    ViewData["Title"] = "Community Directory";
    Layout = "_ResidentLayout";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Community Directory</h1>
        <a href="@Url.Action("Dashboard", "Resident")" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left fa-sm text-white-50 me-1"></i> Back to Dashboard
        </a>
    </div>

    <!-- Directory Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Resident Directory</h6>
        </div>
        <div class="card-body">
            <p>The community directory is currently being updated. Check back soon!</p>
        </div>
    </div>
</div> 