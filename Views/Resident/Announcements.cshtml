@model IEnumerable<SubdivisionManagement.Models.Announcement>
@{
    ViewData["Title"] = "Announcements";
    Layout = "_ResidentLayout";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Announcements</h1>
    </div>

    <!-- Announcements List -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Announcements</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="list-group">
                    @foreach (var announcement in Model)
                    {
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@announcement.Title</h5>
                                <small>@announcement.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                            <p class="mb-1">@announcement.Content</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-center">No announcements yet.</p>
            }
        </div>
    </div>
</div> 