@model SubdivisionManagement.Models.User
@{
    ViewData["Title"] = "My Profile";
    Layout = "_ResidentLayout";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">My Profile</h1>
    </div>

    <!-- Profile Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Personal Information</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    <div class="avatar-circle mx-auto mb-3">
                        <span class="initials">@(Model.FirstName[0])@(Model.LastName[0])</span>
                    </div>
                    <h4>@Model.FirstName @Model.LastName</h4>
                    <span class="badge bg-primary">@Model.Role</span>
                </div>
                <div class="col-md-8">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th style="width: 30%">Email</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th>Phone Number</th>
                                    <td>@(Model.PhoneNumber ?? "Not provided")</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>@(Model.Address ?? "Not provided")</td>
                                </tr>
                                <tr>
                                    <th>Block/Lot</th>
                                    <td>@(Model.BlockLot ?? "Not provided")</td>
                                </tr>
                                <tr>
                                    <th>Member Since</th>
                                    <td>@Model.CreatedAt.ToString("MMMM dd, yyyy")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a href="#" class="btn btn-primary">Edit Profile</a>
                        <a href="#" class="btn btn-secondary">Change Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 120px;
        height: 120px;
        background-color: #007bff;
        text-align: center;
        border-radius: 50%;
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
    }

    .initials {
        position: relative;
        top: 30px;
        font-size: 50px;
        line-height: 60px;
        color: #fff;
        font-weight: bold;
    }
</style> 