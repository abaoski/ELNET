@model SubdivisionManagement.Controllers.CreateUserModel
@{
    ViewData["Title"] = "Add Tenant";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add Tenant</h1>
        <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left fa-sm text-white-50 me-1"></i> Back to Users
        </a>
    </div>

    <!-- Add Tenant Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-secondary">Tenant Information</h6>
        </div>
        <div class="card-body">
            <form asp-action="CreateTenant" method="post">
                <input type="hidden" asp-for="Role" value="@UserRoleType.Tenant" />
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text">t-</span>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <small class="form-text text-muted">Tenant emails will be prefixed with "t-"</small>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BlockLot" class="form-label">Block/Lot</label>
                            <input asp-for="BlockLot" class="form-control" />
                            <span asp-validation-for="BlockLot" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="alert alert-info mb-3">
                    <i class="fas fa-info-circle me-2"></i> Tenants don't need passwords as they won't have login access.
                </div>
                
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-secondary">Create Tenant</button>
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 