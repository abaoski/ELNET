@model IEnumerable<SubdivisionManagement.Models.Announcement>
@{
    ViewData["Title"] = "Manage Announcements";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage Announcements</h1>
        <a href="@Url.Action("CreateAnnouncement", "Admin")" class="btn btn-sm btn-success">
            <i class="fas fa-plus fa-sm text-white-50 me-1"></i> Create Announcement
        </a>
    </div>

    <!-- Add this right after the page heading section -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Add this right after the success message section -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No announcements found. Create your first announcement using the button above.
        </div>
    }

    <!-- Announcements Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-success">All Announcements</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="announcementsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Created By</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var announcement in Model)
                        {
                            <tr>
                                <td>@announcement.Title</td>
                                <td>@(announcement.CreatedBy?.FirstName ?? "") @(announcement.CreatedBy?.LastName ?? "")</td>
                                <td>@announcement.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (announcement.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("EditAnnouncement", "Admin", new { id = announcement.Id })" class="btn btn-sm btn-success">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@announcement.Id">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                    
                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal-@announcement.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@announcement.Id" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel-@announcement.Id">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete the announcement "<strong>@announcement.Title</strong>"?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <a href="@Url.Action("DeleteAnnouncement", "Admin", new { id = announcement.Id })" class="btn btn-danger">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#announcementsTable').DataTable({
                order: [[2, 'desc']]
            });
        });
    </script>
} 