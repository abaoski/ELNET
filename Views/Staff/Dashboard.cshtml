@model SubdivisionManagement.Models.ViewModels.StaffDashboardViewModel
@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Staff Dashboard</h1>
        <a href="@Url.Action("CreateAnnouncement", "Staff")" class="btn btn-sm btn-primary">
            <i class="fas fa-bullhorn fa-sm text-white-50 me-1"></i> Create Announcement
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row">
        <!-- Homeowners Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Homeowners
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalHomeowners</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-home fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tenants Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-secondary h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Tenants
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalTenants</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Announcements Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Announcements
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAnnouncements</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-bullhorn fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Pending Requests
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingRequests.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("ManageAnnouncements", "Staff")" class="btn btn-primary w-100">
                                <i class="fas fa-bullhorn me-2"></i> Manage Announcements
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("ManageRequests", "Staff")" class="btn btn-info w-100">
                                <i class="fas fa-clipboard-list me-2"></i> Manage Requests
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-success w-100">
                                <i class="fas fa-calendar me-2"></i> View Calendar
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-secondary w-100">
                                <i class="fas fa-file-alt me-2"></i> Generate Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Recent Announcements -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Announcements</h6>
                    <a href="@Url.Action("ManageAnnouncements", "Staff")" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentAnnouncements.Any())
                    {
                        <div class="list-group">
                            @foreach (var announcement in Model.RecentAnnouncements)
                            {
                                <div class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@announcement.Title</h5>
                                        <small>@announcement.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <p class="mb-1">@(announcement.Content.Length > 100 ? announcement.Content.Substring(0, 100) + "..." : announcement.Content)</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center">No announcements yet.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Pending Requests -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-info">Pending Requests</h6>
                    <a href="@Url.Action("ManageRequests", "Staff")" class="btn btn-sm btn-info">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.PendingRequests.Any())
                    {
                        <div class="list-group">
                            @foreach (var request in Model.PendingRequests)
                            {
                                <a href="@Url.Action("RequestDetails", "Staff", new { id = request.Id })" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@request.Title</h5>
                                        <small>@request.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <p class="mb-1">@(request.Description.Length > 100 ? request.Description.Substring(0, 100) + "..." : request.Description)</p>
                                    <small>Request Type: @request.Type</small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center">No pending requests.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 