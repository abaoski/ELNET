<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VerdeNest Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <style>
        :root {
            --primary: #2E8B57; /* Sea Green */
            --primary-dark: #1D6E45;
            --primary-light: #3CB371; /* Medium Sea Green */
            --secondary: #343A40; /* Dark Gray */
            --success: #2E8B57; /* Sea Green */
            --info: #2E8B57; /* Sea Green */
            --warning: #343A40; /* Dark Gray */
            --danger: #DC3545;
            --light: #F8F9FA;
            --dark: #343A40;
            --white: #FFFFFF;
            --gray: #6C757D;
            --gray-dark: #343A40;
            --gray-light: #E9ECEF;
        }
        
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #F8F9FA;
            overflow-x: hidden;
            color: #333;
            line-height: 1.6;
        }
        
        /* Wrapper for the entire page */
        .wrapper {
            display: flex;
            width: 100%;
        }
        
        /* Sidebar styles */
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, var(--primary) 10%, var(--primary-dark) 100%);
            color: white;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1;
            transition: all 0.3s ease-in-out;
        }
        
        /* When sidebar is toggled */
        body.sidebar-toggled .sidebar {
            margin-left: -250px;
        }
        
        body.sidebar-toggled .content-wrapper {
            margin-left: 0;
        }
        
        .sidebar-brand {
            padding: 1.5rem 1rem;
            text-align: center;
            font-weight: 800;
            text-transform: uppercase;
        }
        
        .sidebar-brand i {
            font-size: 2rem;
            transform: rotate(-15deg);
            color: var(--white);
        }
        
        .sidebar-divider {
            border-top: 1px solid rgba(255, 255, 255, 0.15);
            margin: 1rem 0;
        }
        
        .sidebar-heading {
            padding: 0 1rem;
            font-weight: 800;
            font-size: 0.65rem;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
        }
        
        .nav-item .nav-link {
            padding: 0.75rem 1rem;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
        }
        
        .nav-item .nav-link:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .nav-item .nav-link i {
            margin-right: 0.5rem;
        }
        
        .nav-item .nav-link.active {
            color: white;
            font-weight: 700;
        }
        
        .nav-item .collapse-inner {
            background-color: rgba(0, 0, 0, 0.1);
            border-radius: 0.35rem;
            padding: 0.5rem 0;
        }
        
        .nav-item .collapse-item {
            padding: 0.5rem 1rem;
            margin: 0 0.5rem;
            display: block;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            border-radius: 0.35rem;
            white-space: nowrap;
        }
        
        .nav-item .collapse-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }
        
        /* Content wrapper */
        .content-wrapper {
            width: calc(100% - 250px);
            margin-left: 250px;
            transition: all 0.3s ease-in-out;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .topbar {
            height: 4.375rem;
            padding: 0 1rem;
            background-color: white;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        
        .img-profile {
            height: 2rem;
            width: 2rem;
        }
        
        .dropdown-menu {
            position: absolute;
            right: 0;
        }
        
        /* Card styles */
        .card {
            margin-bottom: 1.5rem;
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        }
        
        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1.25rem;
        }
        
        /* Border colors for cards */
        .border-left-primary {
            border-left: 0.25rem solid var(--primary) !important;
        }
        
        .border-left-success {
            border-left: 0.25rem solid var(--success) !important;
        }
        
        .border-left-info {
            border-left: 0.25rem solid var(--info) !important;
        }
        
        .border-left-secondary {
            border-left: 0.25rem solid var(--secondary) !important;
        }
        
        /* Small screens */
        @@media (max-width: 768px) {
            .sidebar {
                width: 100px;
            }
            
            .sidebar .nav-item .nav-link span {
                display: none;
            }
            
            .sidebar .nav-item .nav-link i {
                margin-right: 0;
                font-size: 1.1rem;
            }
            
            .sidebar .sidebar-brand .sidebar-brand-text {
                display: none;
            }
            
            .content-wrapper {
                margin-left: 100px;
                width: calc(100% - 100px);
            }
            
            body.sidebar-toggled .sidebar {
                margin-left: -100px;
            }
        }
        
        /* Toggle button */
        #sidebarToggle {
            background-color: rgba(0, 0, 0, 0.2);
            color: white;
            width: 2.5rem;
            height: 2.5rem;
        }
        
        #sidebarToggle:hover {
            background-color: rgba(0, 0, 0, 0.3);
        }
        
        #sidebarToggleTop {
            color: var(--primary);
        }
        
        /* Footer */
        .sticky-footer {
            padding: 1rem 0;
            flex-shrink: 0;
        }
        
        /* Update any blue colors to green */
        .bg-primary {
            background-color: var(--primary) !important;
        }
        
        .text-primary {
            color: var(--primary) !important;
        }
        
        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
        }
        
        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
        }
        
        /* Improved text styling */
        h1, h2, h3, h4, h5, h6 {
            font-weight: 700;
            color: #2c3e50;
        }
        
        .card-header h6 {
            font-size: 1rem;
            letter-spacing: 0.05em;
        }
        
        .text-gray-800 {
            color: #2c3e50 !important;
        }
        
        /* Form styling improvements */
        .form-control {
            border-radius: 0.35rem;
            font-size: 0.9rem;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d3e2;
        }
        
        .form-control:focus {
            border-color: var(--primary-light);
            box-shadow: 0 0 0 0.25rem rgba(46, 139, 87, 0.25);
        }
        
        label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }
        
        /* Button improvements */
        .btn {
            border-radius: 0.35rem;
            font-size: 0.85rem;
            font-weight: 600;
            padding: 0.5rem 1rem;
        }
        
        .btn-success {
            background-color: var(--primary);
            border-color: var(--primary);
        }
        
        .btn-success:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-leaf"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Verde<span class="text-white">Nest</span></div>
            </a>
            
            <hr class="sidebar-divider my-0">
            
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                
                <hr class="sidebar-divider">
                
                <div class="sidebar-heading">
                    Management
                </div>
                
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ManageUsers", "Admin")">
                        <i class="fas fa-fw fa-users"></i>
                        <span>Users</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseProperties">
                        <i class="fas fa-fw fa-home"></i>
                        <span>Properties</span>
                    </a>
                    <div id="collapseProperties" class="collapse">
                        <div class="collapse-inner rounded">
                            <a class="collapse-item" href="#">All Properties</a>
                            <a class="collapse-item" href="#">Add Property</a>
                            <a class="collapse-item" href="#">Property Types</a>
                        </div>
                    </div>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePayments">
                        <i class="fas fa-fw fa-money-bill"></i>
                        <span>Payments</span>
                    </a>
                    <div id="collapsePayments" class="collapse">
                        <div class="collapse-inner rounded">
                            <a class="collapse-item" href="#">All Payments</a>
                            <a class="collapse-item" href="#">Payment Methods</a>
                            <a class="collapse-item" href="#">Payment Reports</a>
                        </div>
                    </div>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAmenities">
                        <i class="fas fa-fw fa-swimming-pool"></i>
                        <span>Amenities</span>
                    </a>
                    <div id="collapseAmenities" class="collapse">
                        <div class="collapse-inner rounded">
                            <a class="collapse-item" href="#">All Amenities</a>
                            <a class="collapse-item" href="#">Reservations</a>
                            <a class="collapse-item" href="#">Maintenance</a>
                        </div>
                    </div>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseEvents">
                        <i class="fas fa-fw fa-calendar"></i>
                        <span>Events</span>
                    </a>
                    <div id="collapseEvents" class="collapse">
                        <div class="collapse-inner rounded">
                            <a class="collapse-item" href="#">All Events</a>
                            <a class="collapse-item" href="#">Create Event</a>
                            <a class="collapse-item" href="#">Event Categories</a>
                        </div>
                    </div>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ManageAnnouncements", "Admin")">
                        <i class="fas fa-bullhorn"></i>
                        <span>Announcements</span>
                    </a>
                </li>
                
                <hr class="sidebar-divider">
                
                <div class="sidebar-heading">
                    Settings
                </div>
                
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-fw fa-cog"></i>
                        <span>System Settings</span>
                    </a>
                </li>
                
                <hr class="sidebar-divider d-none d-md-block">
                
                <div class="sidebar-heading">
                    Account
                </div>
                
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Account")">
                        <i class="fas fa-fw fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
            
            <hr class="sidebar-divider d-none d-md-block">
            
            <div class="text-center d-none d-md-inline">
                <button class="btn rounded-circle border-0" id="sidebarToggle">
                    <i class="fas fa-angle-left text-white"></i>
                </button>
            </div>
        </div>
        
        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Topbar -->
            <div class="topbar mb-4 d-flex justify-content-between align-items-center">
                <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle me-3">
                    <i class="fa fa-bars"></i>
                </button>
                
                <div class="d-flex align-items-center">
                    <div class="me-2 d-none d-lg-inline text-gray-600 small">@Context.Session.GetString("UserName")</div>
                    <img class="img-profile rounded-circle" src="https://ui-avatars.com/api/?name=@Context.Session.GetString("UserName")&background=random">
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end shadow">
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i>
                                Profile
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-cogs fa-sm fa-fw me-2 text-gray-400"></i>
                                Settings
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i>
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Page Content -->
            @RenderBody()
            
            <!-- Footer -->
            <footer class="sticky-footer bg-white mt-4">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; VerdeNest 2023</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Toggle the side navigation
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.body.classList.toggle('sidebar-toggled');
            
            // Toggle the icon direction
            const icon = this.querySelector('i');
            if (document.body.classList.contains('sidebar-toggled')) {
                icon.classList.remove('fa-angle-left');
                icon.classList.add('fa-angle-right');
            } else {
                icon.classList.remove('fa-angle-right');
                icon.classList.add('fa-angle-left');
            }
        });
        
        document.getElementById('sidebarToggleTop').addEventListener('click', function() {
            document.body.classList.toggle('sidebar-toggled');
            
            // Update the toggle button icon as well
            const sidebarToggleIcon = document.querySelector('#sidebarToggle i');
            if (document.body.classList.contains('sidebar-toggled')) {
                sidebarToggleIcon.classList.remove('fa-angle-left');
                sidebarToggleIcon.classList.add('fa-angle-right');
            } else {
                sidebarToggleIcon.classList.remove('fa-angle-right');
                sidebarToggleIcon.classList.add('fa-angle-left');
            }
        });
        
        // Close any open menu accordions when window is resized below 768px
        window.addEventListener('resize', function() {
            if (window.innerWidth < 768) {
                var collapseElements = document.querySelectorAll('.collapse.show');
                collapseElements.forEach(function(element) {
                    if (element.id.startsWith('collapse')) {
                        new bootstrap.Collapse(element).hide();
                    }
                });
            }
        });
        
        // Set active nav item based on current URL
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link, .collapse-item');
            
            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href && currentPath.includes(href) && href !== '#') {
                    link.classList.add('active');
                    
                    // If it's in a collapse, expand the collapse
                    const collapseParent = link.closest('.collapse');
                    if (collapseParent) {
                        const collapseId = collapseParent.id;
                        const collapseToggle = document.querySelector(`[data-bs-target="#${collapseId}"]`);
                        if (collapseToggle) {
                            collapseToggle.classList.remove('collapsed');
                            collapseToggle.setAttribute('aria-expanded', 'true');
                            new bootstrap.Collapse(collapseParent).show();
                        }
                    }
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 