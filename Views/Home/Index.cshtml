@model List<SubdivisionManagement.Models.Announcement>
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <!-- Welcome Banner -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Welcome to VerdeNest</h4>
                </div>
                <div class="card-body text-center">
                    <p class="lead mb-3">Verdenest Subdivision system</p>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-success">Login to Your Account</a>
                </div>
            </div>
            
            <!-- Announcements -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Community Announcements</h4>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="list-group">
                            @foreach (var announcement in Model)
                            {
                                <div class="list-group-item list-group-item-action mb-3">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@announcement.Title</h5>
                                        <small>@announcement.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <p class="mb-1">@announcement.Content</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center">No announcements at this time.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
